    <%- include('header') %> 
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>
    
    <div class="box">
        <% for(let i = 0; i<newItem.length; i++ ){ %>
            <div class="item">
                <input type="checkbox">
                <p><%= newItem[i] %></p>
            </div>
        <% } %>
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required>
            <button class="add-items" type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>
    </div>
    <div class="box-button" id="work_heading">
        <a href="/work">
            <button class="btn btn1">Work List</button>
        </a>
        <a href="/">
            <button class="btn btn2">Home List</button>
        </a>
    </div>

    <%- include('footer') %>